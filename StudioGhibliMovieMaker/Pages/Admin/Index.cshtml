@page
@model StudioGhibliMovieMaker.Pages.Admin.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table"><caption>The admin table, displaying all users</caption>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StudentsDataModel[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentsDataModel[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentsDataModel[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentsDataModel[0].Courses)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.StudentsDataModel) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Courses)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.StudentId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.StudentId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.StudentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
